@model WebApplicationRandomOrg.Models.RandomDate

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Cлучайная дата</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.minDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.minDate, new { htmlAttributes = new { @class = "form-control", min = "1", max = "31" } })
            @Html.ValidationMessageFor(model => model.minDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.minMonth, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.minMonth, new { htmlAttributes = new { @class = "form-control" ,min = "1", max = "12" } })
            @Html.ValidationMessageFor(model => model.minMonth, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.minYear, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.minYear, new { htmlAttributes = new { @class = "form-control", min = "1", max = "2018" } })
            @Html.ValidationMessageFor(model => model.minYear, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.maxDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.maxDate, new { htmlAttributes = new { @class = "form-control" ,min = "1", max = "31" } })
            @Html.ValidationMessageFor(model => model.maxDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.maxMonth, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.maxMonth, new { htmlAttributes = new { @class = "form-control", min = "1", max = "12" } })
            @Html.ValidationMessageFor(model => model.maxMonth, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.maxYear, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.maxYear, new { htmlAttributes = new { @class = "form-control",min = "1", max = "2018" } })
            @Html.ValidationMessageFor(model => model.maxYear, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сгенерировать" class="btn btn-default" />
        </div>
    </div>
</div>
   
}
    <p>@ViewBag.output</p>
    <p>@ViewBag.Error</p>
