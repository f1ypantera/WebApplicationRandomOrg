<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title></title>
</head>
<body>

    <h4>Случайные слова</h4>
    <hr />

    @using (Html.BeginForm("SelectRandomWords", "GenerateNumber"))
    {

        <div class="form-group">

            <p>Введите количество случайных слов</p>
            <p><input type="text" name="numberofwords" /></p>


            <p>
                Ваш текст<Br>
                <textarea name="text" cols="40" rows="5"></textarea>
            </p>

            <p><input type="submit" value="Сгенерировать" class="btn btn-default" /></p>


            <p>@ViewBag.output</p>



        </div>
    }
</body>
</html>
