
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title  Random.org </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
  
</head>

<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Random.org</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>

                  
                  

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Generate Number
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("RandomInteger","GenerateNumber")">Random number(int,double)</a></li>
                            <li><a href="#">Random Password</a></li>
                            <li><a href="#">List of random numbers</a></li>
                            <li><a href="#">List Of Random Passwords</a></li>
                            <li><a href="#">Random Word</a></li>
                            <li><a href="#">Random Date</a></li>
                            <li><a href="#">Random Point On The Map</a></li>
                        </ul>
                    </li>


                </ul>
                <ul class="nav navbar-nav navbar-right">

                    @if (User.Identity.IsAuthenticated && User.Identity.Name != "Admin")
                    {

                        <li>  <a href="@Url.Action("Edit", "Account")">Добро пожаловать @User.Identity.Name</a></li>
                        <li> @Html.ActionLink("Logout", "Logout", "Account")</li>

                    }
                    else if (User.Identity.Name != "Admin")
                    {

                        <li><a href="@Url.Action("Registration", "Account")"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                        <li><a href="@Url.Action("Login", "Account")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    }
                    else if (User.Identity.Name == "Admin")
                    {
                        <li><a href="@Url.Action("Index", "UserAccountss")">Страница Админа</a></li>
                        <li> @Html.ActionLink("Logout", "Logout", "Account")</li>
                    }




                </ul>
            </div>
        </div>
    </nav>

   

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>


