@model IEnumerable<WebApplicationRandomOrg.Models.UserAccount>

@{
    ViewBag.Title = "Index";
}




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Role.RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PasswordConfirm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordConfirm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.AccountId }) |
                @Html.ActionLink("Детали", "Details", new { id = item.AccountId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.AccountId }) |
                @Html.ActionLink("Статистика", "SelectStaticsByAdmin", new { id = item.AccountId })
            </td>
        </tr>
      
    }

</table>
<div class="form-group">
    <a class="btn btn-default" href="@Url.Action("Create","UserAccountss")">Новый пользователь</a>
    <a class="btn btn-default" href=" @Url.Action("GlobalStatistic","Statistics")" role="button">Общая статистика</a>
    <a class="btn btn-default" href=" @Url.Action("GlobalStatisticByUserType","Statistics")" role="button">Общая статистика по юзерам</a>
    <a class="btn btn-default" href=" @Url.Action("Index","Coments")" role="button">Отзывы пользователей</a>
</div>


